
Objetivo - 1



#include <stdio.h>



int main(void){



  float r; /* raio */

  float p; /* perimetro */

  float pi = 3.1416; /* valor de pi para a operacao */

   

  printf ("Informar o valor do raio: ");

  scanf ("%f" , &r);



  p = 2 * pi * r;



  printf("Perimetro: %.2f", p);



  return 0;

}



Objetivo - 2



#include <stdio.h>



int main(int argc, char** argv)

{

  int tempo, horas, horas_seg, minutos, segundos;

  horas_seg = 3600; /* horas em segundos */



  printf("Entre com o n√∫mero de segundos: ");

  scanf("%d", &tempo);



  horas = (tempo/horas_seg); /* resultado das horas */

  minutos = (tempo -(horas_seg))/60; /* resultado dos minutos */

  segundos = (tempo -(horas_seg)-(minutos*60)); /* resultado dos segundos */

  printf("%dh : %dm :%ds \n",horas,minutos,segundos);



  return 0;

}



Objetivo - 3



#include <stdio.h>



int main(void){



  /* 1 gb = 1024^3 bytes */

  float g; /* gigabyte */

  float b; /* bytes */



  printf ("Informar a quantidade de GB: ");

  scanf ("%f" , &g);



  b = g * 1073741824;



  printf ("Bytes: %.f", b);



  return 0;

}

