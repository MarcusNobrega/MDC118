#include <stdio.h>



int main (void)

{

  int num;

  printf(" Digite o numero interiro: ");/* Informar o numero */

  scanf("%d",&num);



  if(num%2==0)//operador %

{

  printf("Par");

}

  else

  printf("Impar");



  return 0;

}



