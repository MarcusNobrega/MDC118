#include <stdio.h>



int main(void)

{

  int nota; /* nota */

  printf ("Coloque uma nota de 1 a 5: ");/* Informar o numero para ver a nota */

  scanf("%d", &nota);

   

  if (nota == 1)

  { 

  printf("Ruim");

  } 

   

  else if (nota == 2)

  {

  printf("Insuficiente");

  }

  

  else if (nota == 3)

  {

  printf("Suficiente");

  }



  else if (nota == 4)

  {

  printf("Bom");

  }



  else if (nota == 5)

  {

